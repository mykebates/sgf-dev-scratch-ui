@{
    var request = Context.Request;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    @if (request.QueryString.ToString().Contains("horse_build"))
    {
        <link rel="stylesheet" href="/css/styles.css" asp-append-version="true" />   
    }

    @RenderSection("TopScripts", required: false)

    
</head>
<body>

    <header class="site_header">
        <div class="container">
            <a href="/"><img src="/images/logo.svg" alt="Springfield Devs Logo"></a>
        </div>
    </header>

    @RenderBody()

    <footer class="site_footer">
        <div class="container">
            <div class="main">
                <div class="logo">
                    <a href="/">
                        <img src="~/images/logo_short.svg" alt="SGF Devs">
                    </a>
                </div>
                
                <nav>
                    <a href="#">About</a>
                    <a href="#">Directory <span>3</span></a>
                    <a href="#">Jobs <span>1</span></a>
                    <a href="#">Chapters</a>
                    <a href="#">Sponsors</a>
                </nav>
            </div>
            
            <div class="other_links">
                <nav>
                    <a href="#">Twitch</a>
                    <a href="#">YouTube</a>
                    <a href="#">GitHub</a>
                    <a href="#">Facebook</a>
                    <a href="#">Twitter</a>
                    <a href="#">Instagram</a>
                    <a href="#">Slack</a>
                </nav>
                
                <nav>
                    <a href="#">Contact</a>
                    <a href="#">Code of Conduct</a>
                    <a href="#">Cookie Policy</a>
                    <a href="#">Legal Stuff</a>
                    <a href="#">Privacy Policy</a>
                </nav>
            </div>
            
            <div class="signup">
                <h5>Never miss a thing</h5>
                <p>
                    Subscribe to our newsletter and be the first to know about exciting events, exclusive offers from sponsors and whatâ€™s happening in our dev community.
                </p>
                
                <form action="#" method="post">
                    <div class="material_input">
                        <label for="">Email</label>
                        <input type="text" placeholder="laurie.bream@@raviga.com">
                    </div>
                    
                    <button class="button">Sign Up</button>
                </form>
            </div>
        </div>
    </footer>

<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/js/plugins.js" asp-append-version="true"></script>
<script src="~/js/main.js" asp-append-version="true"></script>

<environment include="Development">
    @if (!request.QueryString.ToString().Contains("horse_build"))
    {
        <script src="~/horse.js"></script>   
    }
</environment>

@RenderSection("Scripts", required: false)

</body>
</html>
